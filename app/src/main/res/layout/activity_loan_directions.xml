<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dashboard_bg"
    tools:context=".LoanDirectionsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/allerta"
        android:layout_gravity="center"
        android:text="Loan Process"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_22sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:fontFamily="@font/allerta"
                    android:text="1. Click On Apply Now To Start Applying For Loan."
                    android:textAlignment="center"
                    android:textColor="#252525"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/ap1"/>
                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adViewloanprocess1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:adSize="BANNER"
                        app:adUnitId="ca-app-pub-9204826362738432/1373943806">

                    </com.google.android.gms.ads.AdView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/allerta"
                    android:text="2. Enter Your Basic Information in the desired Filed and Press The Next Button."
                    android:textAlignment="center"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColor="#252525"
                    android:textSize="16sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="3. Enter Your Contact Information in the desired Filed and Press The Next Button."
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="4.(a) Select Payment"
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap4"/>
                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adViewloanprocess2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        app:adSize="BANNER"
                        app:adUnitId="ca-app-pub-9204826362738432/1373943806">
                    </com.google.android.gms.ads.AdView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="4.(b) Enter Your account Details in the desired Filed and Press The Next Button."
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="5. Enter Your Loan Details in the desired Filed and Press The Submit Button."
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap6"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="6. After Clicking On Submit, Select Yes, If you want to submit Your Application."
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ap7"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/allerta"
                        android:text="7. Finally, Your Application Has Been Submitted Succesfully. "
                        android:textAlignment="center"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"/>
                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adViewloanprocess3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:adSize="BANNER"
                        app:adUnitId="ca-app-pub-9204826362738432/1373943806">

                    </com.google.android.gms.ads.AdView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
        </LinearLayout>